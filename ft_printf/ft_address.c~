#include "libftprintf.h"

char	*ft_address(void *pointer)
{
	unsigned long long	i;
	wchar_t				*res;
	wchar_t				*tmp;

	i = (unsigned)pointer;
	res = (wchar_t*)malloc(sizeof(wchar_t)*200);
	tmp = res;
	ft_wstrcpy(res, L"0x");
	res += 2;
	ft_wstrcpy(res, ft_base(i, 16));
	return(tmp);
}
